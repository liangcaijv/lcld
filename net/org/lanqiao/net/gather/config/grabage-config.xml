<?xml version="1.0" encoding="UTF-8"?>
<root>
	<!-- htmlunit配置 -->
	<global-config>
		<browser version="INTERNET_EXPLORER_8"></browser>
		<javascript enabled="false"></javascript>
		<css enabled="false"></css>
	</global-config>

	<grabages>
		<!-- 站点采集配置配置 -->
		<grabage usable="true" forward="http://portal.czol.info"
			link="http://portal.czol.info/news/money">
			<xlink xpath="//table[@class='box']//a[@href]" />
			<title xpath="//h1" />
			<timeline xpath="//td[@class='info_text']" />
			<content xpath="id('text')" />
		</grabage>

		<grabage usable="false" forward="http://business.sohu.com"
			link="http://business.sohu.com">
			<xlink
				xpath="/html/body//div[@class='colB']/div[@collection='Y']//a[@sdevindex]" />
			<title xpath="//h1" />
			<source xpath="//div[@class='sourceTime']/div[@class='l']" />
			<timeline xpath="//div[@class='sourceTime']/div[@class='r']" />
			<content xpath="id('contentText')" />
		</grabage>

		<grabage usable="false" forward="http://money.163.com" link="http://money.163.com">
			<xlink xpath="id('body')//div[@class='content']//a[@href]" />
			<title xpath="/html/body//h1" />
			<timeline xpath="/html/body//div[@class='endContent']/span[@class='info']" />
			<content xpath="id('endText')" />
		</grabage>
		<grabage usable="false" forward="http://blog.csdn.net"
			link="http://blog.csdn.net/zdsdiablo">
		</grabage>
		<grabage usable="false" forward="http://www.javaeye.com"
			link="http://www.javaeye.com/forums/tag/Spring">
			<xlink xpath="id('forum_main')/tbody/tr/td[@class='topic_title']/a[@href]" />
			<title xpath="id('forum_main')/thead/tr/th/div[@class='wrapper']" />
			<author
				xpath="id('posts')/tr[1]/td[@class='postauthor']/ul/li[@class='name']" />
			<timeline
				xpath="id('posts')/tr[1]/td[@class='postcontent']/div/div[@class='description']" />
			<content xpath="//div[@class='postbody clearfix']" />
			<splitpath xpath="//div[@class='pagination']/a[@class='next_page']" />
			<advert xpath="id('hunter_recommended')" />
			<advert xpath="id('related_topics')" />
		</grabage>
	</grabages>
</root>